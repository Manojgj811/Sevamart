<div id="productsearch" class="input-group">
  <input type="text" name="search" value="{{ search }}" placeholder=" Search Products/Categories in {{ config_name }}" class="form-control input-lg" />
  <span class="input-group-btn">
    <button type="button" class="btn btn-default btn-lg productbtn" style="height:39px;"><i class="fa fa-search"></i></button>
  </span>
</div>

    <script type="text/javascript">

          $('#productsearch input[name=\'search\']').parent().find('button').on('click', function() {
        var url = $('base').attr('href') + 'index.php?route=product/search';

      //	alert(url);
        var value = $(' #productsearch input[name=\'search\']').val();

        //alert(value);

            if (value) {
              url += '&search=' +encodeURIComponent (value);
            }

          //alert(url);

            location = url;
          });

      </script>

     <script type="text/javascript">

        $('#productsearch input[name=\'search\']').on('keydown', function(e) 
        {
	      	if (e.keyCode == 13) {
          $(' #productsearch input[name=\'search\']').parent().find('button').trigger('click');
        }
      });

      </script>