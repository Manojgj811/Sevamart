<script>
var wishlist = {
	
      'add': function(store_id) {  
            
		$.ajax({
			url: 'index.php?route=account/favouritestore/add',
			type: 'post',
			data: 'store_id=' + store_id,
			dataType: 'json',
			success: function(json) {
                    location.reload();

                      
				if (json['success']) {
					$('.star').parent().before('<div class="alert alert-success alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}
                     
		
			},
			error: function(xhr, ajaxOptions, thrownError) {
				alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});
	},
      'remove': function(store_id) {
           
		$.ajax({
			url: 'index.php?route=account/favouritestore/delete',
			type: 'post',
			data: 'store_id=' + store_id,
			dataType: 'json',
			success: function(json) {
                      location.reload();
				
				if (json['success']) {
					$('.star').parent().before('<div class="alert alert-danger alert-dismissible"><i class="fa fa-check-circle"></i> ' + json['success'] + ' <button type="button" class="close" data-dismiss="alert">&times;</button></div>');
				}
                        
			},
			error: function(xhr, ajaxOptions, thrownError) {
				alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
			}
		});
	}

}

</script>
