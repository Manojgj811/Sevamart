<input type="text" name="search" value="{{ search }}"  placeholder="Search for Products" class="form-control input-lg" style="margin-left:360px ; margin-top:9px ;font-size:12px;  " />


<span class="input-group-btn">
<button type="button" class="btn btn-default btn-lg"  style="margin-left:360px ; margin-top:10px"   ><i class="fa fa-search"  style="height:23px; width :15px; "></i></button>
</span>
</div>

        <script type="text/javascript">    

        $('#search input[name=\'search\']').parent().find('button').on('click', function() {

        var url = $('base').attr('href') + 'index.php?route=product/search&user_token={{ user_token }}';

        // alert(url);

        var value = $(' #search input[name=\'search\']').val();

        // alert('entered value is '+value);

        if (value) 
        {
        url += '&search=' + (value);

        }

        location = url;
        });


        </script>