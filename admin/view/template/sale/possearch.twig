}

#search .btn-lg {
    font-size: 15px;
    line-height: 18px;
    padding: 10px 35px;
    text-shadow: 0 1px 0 #fff;
}

.btn-default {
    color: #777;
    text-shadow: 0 1px 0 rgb(255 255 255 / 50%);
    background-color: #e7e7e7;
